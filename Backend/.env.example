# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (Postgres)
DATABASE_URL=postgresql://username:password@localhost:5432/caly_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=caly_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis (for job queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Exotel Configuration
EXOTEL_API_KEY=your_exotel_api_key
EXOTEL_API_TOKEN=your_exotel_api_token
EXOTEL_SID=your_exotel_sid
EXOTEL_APP_ID=your_exotel_app_id
EXOTEL_PHONE_NUMBER=+911234567890
EXOTEL_WEBHOOK_BASE_URL=https://yourdomain.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
OPENAI_TTS_VOICE=alloy

# ASR Configuration (Choose one)
ASR_PROVIDER=deepgram  # deepgram or whisper
DEEPGRAM_API_KEY=your_deepgram_api_key
WHISPER_API_KEY=your_whisper_api_key

# Shopify Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_access_token
SHOPIFY_API_VERSION=2025-01

# Shiprocket Configuration
SHIPROCKET_EMAIL=your_email@example.com
SHIPROCKET_PASSWORD=your_password
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# WhatsApp Business API
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Wasabi S3 Configuration
WASABI_ENDPOINT=https://s3.wasabisys.com
WASABI_REGION=us-east-1
WASABI_ACCESS_KEY=your_wasabi_access_key
WASABI_SECRET_KEY=your_wasabi_secret_key
WASABI_BUCKET=caly-recordings

# Policy Engine Defaults
REFUND_AUTO_THRESHOLD=2000
RETURN_WINDOW_DAYS=14
CANCEL_WINDOW_HOURS=24
RETENTION_DAYS=45

# Monitoring & Alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url
ALERT_EMAIL=alerts@yourcompany.com

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_32_chars

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/caly.log